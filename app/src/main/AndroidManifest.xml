<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.inria.tyrex.senslogs" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="fr.inria.tyrex.senslogs.Application">

        <activity
            android:name="fr.inria.tyrex.senslogs.ui.RecordActivity"
            android:label="@string/activity_record"
            android:keepScreenOn="true"
            android:theme="@style/Theme.Closeable"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|orientation|screenSize">
        </activity>

        <activity
            android:name="fr.inria.tyrex.senslogs.ui.LogsActivity"
            android:label="@string/activity_logs">
        </activity>

        <activity
            android:name="fr.inria.tyrex.senslogs.ui.MainActivity"
            android:label="@string/activity_main"
            android:keepScreenOn="true"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|orientation|screenSize">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
